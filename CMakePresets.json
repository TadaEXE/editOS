{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base settings",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "x86-i386",
      "displayName": "x86 / i386 (Debug)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-x86-i386",
      "cacheVariables": {
        "ARCH_FAMILY": "x86",
        "ARCH_VARIANT": "i386",
        "TARGET_TRIPLET": "i386-elf",
        "QEMU-SYSTEM": "qemu-system-i386"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x86-i386-build",
      "displayName": "Build kernel + ISO (x86/i386)",
      "configurePreset": "x86-i386"
    },
    {
      "name": "x86-i386-build-and-run",
      "displayName": "Build and run in QEMU (x86/i386)",
      "configurePreset": "x86-i386",
      "targets": [ "run" ]
    },
    {
      "name": "x86-i386-build-and-analyze",
      "displayName": "Build and run elf-size-analyze (x86/i386)",
      "configurePreset": "x86-i386",
      "targets": [ "analyze" ]
    }
  ]
}

